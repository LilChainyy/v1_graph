// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Ticker {
  id        String   @id @default(cuid())
  symbol    String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  events    Event[]
  
  @@map("tickers")
}

model Event {
  id              String   @id @default(cuid())
  tickerId        String?  // Nullable for global events
  title           String
  normalizedTitle String   // Normalized title for deduplication
  start           String   // YYYY-MM-DD format
  end             String?  // YYYY-MM-DD format (optional)
  category        String   // EventCategory enum as string
  timezone        String   @default("UTC")
  source          String   // EventSource enum as string
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Optional fields
  links       String?  // JSON string of string array
  notes       String?
  externalId  String?  // External API ID for deduplication
  
  // Relations
  ticker      Ticker?  @relation(fields: [tickerId], references: [id], onDelete: Cascade)
  
  // Composite unique index for deduplication
  @@unique([tickerId, start, category, normalizedTitle])
  @@map("events")
}
