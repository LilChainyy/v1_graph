generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Ticker {
  id        String   @id @default(cuid())
  symbol    String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  events    Event[]

  @@map("tickers")
}

model Event {
  id              String   @id @default(cuid())
  tickerId        String?
  title           String
  start           String
  end             String?
  category        String
  timezone        String   @default("UTC")
  source          String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  links           String?
  notes           String?
  externalId      String?
  normalizedTitle String?  @default("")
  ticker          Ticker?  @relation(fields: [tickerId], references: [id], onDelete: Cascade)

  @@unique([tickerId, start, category, normalizedTitle])
  @@map("events")
}
